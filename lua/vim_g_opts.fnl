(local g _G.vim.g)

; g.defer_verbose = true
; 
; For checking in plugin configs
(set g.have_nerd_font true)

; Used by c_CTRL-f keymap
(set g.cmdline_auto_height 3)
; Used by <leader>oc keymap
(set g.quickfix_auto_height 3)

(set g.winblend 30)

; Leader key
(set g.mapleader " ")
(set g.maplocalleader " ")

; vim.g.text_width used by colorcolumn, and textwidth enable/disable keymaps
(set g.text_width 80)

